@model Testy.Models.LoginModel
@{
    ViewBag.Title = "Logowanie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @using (Html.BeginForm("Login", "Login"))
    {
        <div class="form-horizontal">
            <h4>Logowanie</h4>
            <div class="form-group">
                @Html.LabelFor(model => model.Nazwa, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Nazwa, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Nazwa, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Haslo, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.PasswordFor(model => model.Haslo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Haslo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-offset-3">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
        </div>
        <input class="btn btn-default col-md-offset-3" type="submit" value="Zaloguj" />
    }
</div>
